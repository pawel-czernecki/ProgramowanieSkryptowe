doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        title Second Express application
        style.
            table {
                width: 100%;
            }
            td {
                border: 1px solid #000; 
                padding: 15px;
                text-align: left;
            }
            th {
                background-color: #04AA6D;
                color: white;
            }
    body
        main
            h1 Second Express application
            table
                tr
                    th GET
                    th POST
                tr 
                    td 
                        form(method='GET' action='/submit')
                            label(for='name') Give your name
                            input(name='name')
                            br
                            input(type='submit')
                            input(type='reset')
                    td 
                        form(method='POST' action='/')
                            label(for='name') Give your name
                            input(name='name')
                            br
                            input(type='submit')
                            input(type='reset')
        img(src=imagePath)
        if students && students.length > 0
            table
                thead
                    tr
                        th Nazwisko
                        th Imię
                        if students.some(student => 'department' in student)
                            th Wydział
                tbody
                    each student in students
                        tr
                            td= student.lname
                            td= student.fname
                            if student.department
                                td= student.department
        else
            p Brak studentów